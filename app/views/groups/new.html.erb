<header>
  <%= link_to groups_path, data: { turbo: false }  do %>
    <%= inline_svg_tag "chevron_left.svg", class: "chevron" %>
  <% end %>
  <h1>new category</h1>
  <div id="whatever">
  <%= inline_svg_tag "menu.svg", class: "burger-menu" %>
</div>
</header>

<main>
  <%= form_with model: @group do |f| %>
    <div class="field">
      <%= f.label :name, "Name:" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :icon, "Icon:" %><br />
      <%= f.text_field :icon, autofocus: true, autocomplete: "icon" %>
    </div>

    <div class="actions">
      <%= f.submit "add category", data: { turbo: false } %>
    </div>
  <% end %>
</main>
